{
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "lockFileMaintenance": {
    "description": "Refresh lock file weekly on mondays",
    "enabled": true
  },
  "stabilityDays": 3,
  "packageRules": [
    {
      "description": "Ignore alpha versions of Docusaurus",
      "packagePatterns": ["^@docusaurus"],
      "allowedVersions": "/^v\\d+\\.\\d+\\.\\d+(-alpha\\.(\\d+))?$/"
    }
  ]
}
